<h1 class="text-center">List of Recipes</h1>

<div class="card-box col-xs-10 col-xs-offset-1">
	<%= link_to 'Add New Recipe', new_recipe_path, :class => 'btn btn-danger' %>
	<br />
	<% @recipe.each do |receipe_item| %>
	<h2><%= receipe_item.title %></h2>
	<p><%= link_to 'More Details', recipe_path(receipe_item) %><p>

	<% end %>
	<br />
	<%= link_to 'Back', root_path , :class => 'btn btn-primary' %>
</div>
